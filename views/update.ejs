<!DOCTYPE html>
<html>
<head>
    <title>Tate Node Visualiser</title>

    <script type="text/javascript" src="js/jquery-1.11.2.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/updateNode.js"></script>

    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/bootstrap-theme.min.css">
    <link rel='stylesheet' href="css/tateExpressStyles.css">

</head>
<body>
    <h1>Tate Node Visualiser</h1>

    <div id="updateNode" class="title">
        <h3>Update Node</h3>
        <form id="searchForm" class="form-horizontal" action="/searchGraph" method = "post">
            <div class="form-group">
                <label for="graphID" class="col-md-1 control-label">Graph ID</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" name="graphID" id="graphID" value="<%= graphID %>">
                </div>
            </div>
            <div class="form-group">
                <label for="node_Name" class="col-md-1 control-label">Node Name</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" name="nodeValue" id="node_Name" value="<%= node_Name %>">
                </div>
            </div>
            <button id="search" type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <div id="links" class="title">
        <h2>Links</h2>
        <h3><%= node %></h3>

        <div class="container-fluid">
            <% for(var i=0; i<linkData.length; ++i) { %>
            <div class="row">
                <div class="col-md-3">
                    <ul>
                        <li><%= linkData[i].linkType %> <%= linkData[i].linkTo %></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary" id='<%=i + "yesLink"%>' type="button">Agree</button><button class="btn btn-primary" id='<%=i + "noLink"%>' type="button">Disagree</button>
                </div>
                <div class="col-md-2">
                    <span id='<%=i + "updated"%>' class="label label-success noDisplay">Updated</span>
                </div>
                <div class="col-md-5">
                    &nbsp
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <form method="post" action="/login">
        <div class="form-group title">
            <button id="back" type="submit" class="btn btn-primary">Home</button>
        </div>
    </form>
</body>
</html>
