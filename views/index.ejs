<!DOCTYPE html>
<html>
  <head>
      <title>Tate Node Visualiser</title>

      <script type="text/javascript" src="js/jquery-1.11.2.min.js"></script>
      <script src="http://malsup.github.com/jquery.form.js"></script>
      <script type="text/javascript" src="js/bootstrap.min.js"></script>
      <script src="/socket.io/socket.io.js"></script>
      <script type="text/javascript" src="js/socketManager.js?v=0.2"></script>
      <script type="text/javascript" src="js/tateExpressViz.js?v=0.2"></script>

      <link rel="stylesheet" href="css/bootstrap.min.css">
      <link rel="stylesheet" href="css/bootstrap-theme.min.css">
      <link rel='stylesheet' href="css/tateExpressStyles.css">

  </head>
  <body>
    <h1>Tate Node Visualiser</h1>

    <div id="createGraph" class="title">
        <h2>Create Graph</h2>
        <form class="form-horizontal">
            <div class="form-group">
                <label for="graphName" class="col-md-1 control-label">Graph Name</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="graphName">
                </div>
            </div>
            <div class="form-group">
                <label for="graphDescription" class="col-md-1 control-label">Description</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="graphDescription">
                </div>
            </div>
        </form>
        <button type="button" id="create" class="btn btn-primary">New Graph</button>
        <p><br>Graph ID: <span id="graphID">Not generated</span></p>
    </div>

    <div id="generateGraph" class="title">
        <h2>Generate Graph</h2>
        <form ref='uploadForm' id="uploadForm" method="post" action="/generateGraph" enctype="multipart/form-data">
            <input type="file" name="vizFile">
        </form>
        <br>
        <button type="button" class="btn btn-primary" id="generate">Generate graph</button>
    </div>

    <div id="graphProperties" class="title">
        <h2>Graph Properties</h2>
        <div id="properties" class="container-fluid">
            <div class="row">
                <div class="col-md-3 col-md-offset-1">
                    <p>Nodes to create : <span id="nodesToCreate"></span></p>
                </div>
                <div class="col-md-3">
                    <p>Created :  <span class="label label-primary">Nodes <span id="nodesCreated" class="badge"></span></span></p>
                </div>
                <div class="col-md-5">
                    &nbsp
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-md-offset-1">
                    <p>Edges to create : <span id="edgesToCreate"></span></p>
                </div>
                <div class="col-md-3">
                    <p>Created : <span class="label label-primary">Edges <span id="edgesCreated" class="badge"></span></span> </p>
                </div>
                <div class="col-md-5">
                    &nbsp
                </div>
            </div>
        </div>
        <div id="status">
            <span id="graphStatus" class="label label-success"></span>
        </div>
    </div>

    <div id="options" class="container-fluid">
        <div class="row">
            <div class="col-md-1">
                <form method="get" action="/updateNode">
                    <div id="updateNode" class="form-group">
                        <button id="update" type="submit" class="btn btn-primary">Update Node</button>
                    </div>
                </form>
            </div>
            <div class="col-md-1">
                <form method="get" action="/addNode">
                    <div id="addNode" class="form-group">
                        <button id="nodeAdd" type="submit" class="btn btn-primary">Add Node</button>
                    </div>
                </form>
            </div>
            <div class="col-md-1">
                <form method="get" action="/addLink">
                    <div id="addLink" class="form-group">
                        <button id="linkAdd" type="submit" class="btn btn-primary">Add Link</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

  </body>
</html>
